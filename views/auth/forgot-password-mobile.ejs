<%- include('../bootstrap/header') %>
<div class="container p-3 d-flex flex-column min-vh-100">
  <h1 class="fw-bold text-center py-5"><img src="/images/logo-black.svg" alt="Pethudl" height="40"> Pethudl</h1>
  <h4 class="text-center fw-bold mb-4">Forgot Password</h4>

  <!-- Display messages -->
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <!-- Forgot Password Form -->
  <form action="/auth/forgot-password" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label fw-bold">Email address <span class="text-danger">*</span></label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        class="form-control" 
        placeholder="Enter your email" 
        value="<%= formData ? formData.email : '' %>" 
        required>
    </div>
    <button type="submit" class="btn btn-dark w-100">Send Reset Link</button>
  </form>

  <!-- Back to login -->
  <div class="text-center mt-3">
    <a href="/auth/login" class="text-decoration-none text-dark small">Back to Login</a>
  </div>

  <!-- Footer -->
  <p class="text-center text-muted mt-auto small">
    &copy; 2025 Pethudl. All rights reserved.
  </p>
</div>
