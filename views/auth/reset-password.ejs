<%- include('../bootstrap/header') %>

<style>
  /* Animated gradient background */
  body {
    background: linear-gradient(-45deg, #2598fd, #0da9ec, #196ee6, #0f6bad);
    background-size: 400% 400%;
    animation: gradientShift 12s ease infinite;
    overflow: hidden;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Floating emoji */
  .emoji {
    position: absolute;
    font-size: 2.5rem;
    opacity: 0.2;
    animation: floatUp 18s linear infinite;
  }

  @keyframes floatUp {
    from { transform: translateY(100vh) rotate(0deg); }
    to { transform: translateY(-120vh) rotate(360deg); }
  }
</style>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">

  <!-- Floating emojis -->
  <div class="emoji" style="left: 15%; animation-delay: 0s;">üêæ</div>
  <div class="emoji" style="left: 35%; animation-delay: 5s;">üê∂</div>
  <div class="emoji" style="left: 55%; animation-delay: 10s;">üê±</div>
  <div class="emoji" style="left: 75%; animation-delay: 15s;">üê¶</div>

  <div class="row w-100 justify-content-center align-items-center">
    <div class="col-lg-4 col-md-8 col-sm-10">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
          <h4 class="text-center fw-bold mb-4">Reset Password</h4>

          <!-- Success or Error Alert -->
          <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
          <% } %>

          <!-- Reset Password Form -->
          <form action="/auth/reset-password?token=<%= token %>" method="POST">
            <input type="hidden" name="token" value="<%= token %>">
            <div class="mb-3">
              <label for="password" class="form-label fw-bold">New Password <span class="text-danger">*</span></label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter new password" required>
            </div>
            <div class="mb-3">
              <label for="confirm_password" class="form-label fw-bold">Confirm Password <span class="text-danger">*</span></label>
              <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Confirm new password" required>
            </div>
            <button type="submit" class="btn btn-dark w-100">Reset Password</button>
          </form>

          <div class="text-center mt-3">
            <a href="/auth/login" class="text-decoration-none text-dark small">Back to Login</a>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <p class="text-center text-white mt-3 small">
        &copy; 2025 Pethudl. All rights reserved.
      </p>
    </div>
  </div>
</div>
