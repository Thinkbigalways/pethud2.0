<!-- ðŸ“Œ Notifications Script -->
<!-- ============================= -->
<script>
(() => {
  const notifDropdown = document.getElementById('notificationDropdown');
  const notifItems = document.getElementById('notificationItems');
  const notifBadge = document.getElementById('notificationBadge');

  async function fetchNotifications(markAsRead = false) {
    try {
      const res = await fetch(`/notifications/fetch${markAsRead ? '?markRead=1' : ''}`);
      const data = await res.json();

      notifItems.innerHTML = '';
      if (!data.success || data.notifications.length === 0) {
        notifItems.innerHTML = `<li class="dropdown-item text-muted text-center">No notifications yet</li>`;
        notifBadge.classList.add('d-none');
        return;
      }

      let unreadCount = 0;

      data.notifications.forEach(notif => {
        if (!notif.is_read) unreadCount++;

        // build link destination
        const profileUrl = `/@${notif.username}`;

        const li = document.createElement('li');
        li.className = `dropdown-item d-flex align-items-start ${notif.is_read ? '' : 'fw-bold bg-light'}`;
        li.innerHTML = `
          <a href="${profileUrl}" class="d-flex text-decoration-none text-dark w-100">
            <div class="me-2">
              ${
                notif.type === 'like'
                  ? '<i class="fas fa-thumbs-up text-primary"></i>'
                  : notif.type === 'comment'
                  ? '<i class="fas fa-comment text-success"></i>'
                  : notif.type === 'friend_request'
                  ? '<i class="fas fa-user-friends text-warning"></i>'
                  : '<i class="fas fa-bell"></i>'
              }
            </div>
            <div class="flex-grow-1">
              <div>
                ${
                  notif.type === 'like'
                    ? `@${notif.username} liked your post`
                    : notif.type === 'comment'
                    ? `@${notif.username} commented: "${notif.content}"`
                    : notif.type === 'friend_request'
                    ? `@${notif.username} sent you a friend request`
                    : `@${notif.username}` + ' ' + notif.content
                }
              </div>
              <small class="text-muted">${new Date(notif.created_at).toLocaleString()}</small>
            </div>
          </a>
        `;
        notifItems.appendChild(li);
      });

      // Update badge
      if (unreadCount > 0) {
        notifBadge.textContent = unreadCount;
        notifBadge.classList.remove('d-none');
      } else {
        notifBadge.classList.add('d-none');
      }
    } catch (err) {
      console.error('Error loading notifications:', err);
    }
  }

  // Initial fetch
  fetchNotifications(false);

  // Mark as read when dropdown opens
  notifDropdown.addEventListener('click', () => fetchNotifications(true));
})();
</script>
